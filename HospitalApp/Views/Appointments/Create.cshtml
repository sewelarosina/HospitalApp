@model Appointment

<h2 class="mb-4">Book Appointment</h2>

<!-- Show error message if any -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form method="post" class="p-4 bg-white shadow-sm rounded">

    <div class="mb-3">
        <label for="PatientId" class="form-label">Select Patient</label>
        <select class="form-control" id="PatientId" name="PatientId" required>
            @foreach (var p in ViewBag.Patients)
            {
                <option value="@p.Value">@p.Text</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="DoctorId" class="form-label">Select Doctor</label>
        <select class="form-control" id="DoctorId" name="DoctorId" required>
            @foreach (var d in ViewBag.Doctors)
            {
                <option value="@d.Value">@d.Text</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="AppointmentDate" class="form-label">Select Date & Time</label>
        <input type="datetime-local" class="form-control" id="AppointmentDate" name="AppointmentDate" required />
    </div>

    <button type="submit" class="btn btn-primary">Book Appointment</button>
    <a href="/Appointments/Index" class="btn btn-secondary ms-2">Cancel</a>

</form>
