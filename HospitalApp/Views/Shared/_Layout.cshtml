<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hospital / Clinic Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
        <div class="container">
            <a class="navbar-brand" href="#">HospitalApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Patients" asp-action="Index">Patients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Doctors" asp-action="Index">Doctors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center p-3 mt-5">
        &copy; 2026 HospitalApp
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
