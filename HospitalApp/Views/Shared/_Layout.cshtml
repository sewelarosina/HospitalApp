<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hospital / Clinic Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        /* Body background */
        body {
            background-color: #f4f0fa; /* very light purple */
        }

        /* Navbar */
        .navbar {
            background-color: #d6c6f5; /* light purple navbar */
        }

        .navbar-brand {
            font-weight: bold;
            color: #5a3e99 !important; /* darker purple */
        }

        .nav-link {
            font-weight: 500;
            color: #5a3e99 !important;
        }

            .nav-link:hover {
                color: #3b1f78 !important;
            }

        /* Headings */
        h2 {
            color: #8e7cc3;
            margin-bottom: 20px;
        }

        /* Tables */
        table {
            background-color: #fff;
        }

        /* Forms */
        .form-control {
            margin-bottom: 15px;
        }

        /* Buttons */
        .btn-primary {
            background-color: #8e7cc3;
            border-color: #8e7cc3;
        }

            .btn-primary:hover {
                background-color: #7b6abb;
                border-color: #7b6abb;
            }

        /* Footer */
        footer {
            background-color: #8e7cc3;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm p-3 mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">HospitalApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Patients" asp-action="Index">Patients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Doctors" asp-action="Index">Doctors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center p-3 mt-5">
        &copy; 2026 HospitalApp
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
