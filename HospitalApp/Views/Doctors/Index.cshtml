@model List<Doctor>

<h2>Doctors List</h2>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Specialty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Id</td>
                <td>@d.FullName</td>
                <td>@d.Specialty</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Appointments/Create" class="btn btn-primary mt-3">Book Appointment</a>
